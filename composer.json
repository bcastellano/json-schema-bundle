{
  "name": "bcastellano/json-schema-bundle",
  "description": "Symfony bundle to validate json api request and responses with json-schema",
  "keywords": ["symfony", "bundle", "validator", "validation", "api", "json","schema","json-schema"],
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Blas Castellano Moreno",
      "email": "b.castellano.moreno@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.4",
    "symfony/config": "~2.3|~3.0",
    "symfony/yaml": "~2.3|~3.0",
    "symfony/http-kernel": "~2.3|~3.0",
    "symfony/dependency-injection": "~2.3|~3.0",
    "symfony/http-foundation": "~2.3|~3.0",
    "symfony/filesystem": "~2.3|~3.0",
    "symfony/process": "~2.3|~3.0",
    "justinrainbow/json-schema": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.8|~5.0",
    "satooshi/php-coveralls": "^1.0"
  },
  "autoload": {
    "psr-4": { "Bcastellano\\JsonSchemaBundle\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "Bcastellano\\JsonSchemaBundle\\Tests\\": "tests/" }
  }
}
